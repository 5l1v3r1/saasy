@page "~/{locale=en-us}/{tenant}/account/externallogin"
@inject IViewLocalizer Localizer
@model ExternalLoginModel
@{
    ViewData["Title"] = Localizer["Register"];
}

<h1>@ViewData["Title"]</h1>
<h4>@string.Format(Localizer["AssociateAccount"].Value, Model.LoginProvider)</h4>
<hr />

<p class="text-info">
    @string.Format(Localizer["LoggedInWith"].Value, Model.LoginProvider)
    @Localizer["PleaseEnterEmailText"]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["RegisterButton"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
