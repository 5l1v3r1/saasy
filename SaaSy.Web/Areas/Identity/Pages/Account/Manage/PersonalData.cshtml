@page "~/{locale=en-us}/{tenant}/account/manage/personaldata"
@inject IViewLocalizer Localizer
@model PersonalDataModel
@{
    ViewData["Title"] = Localizer["PersonalDataTitle"];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@Localizer["DownloadDeleteDataDesc"]</p>
        <p>
            <strong>@Localizer["PermanentlyDeleted"]</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData"
                asp-area="Identity" 
                asp-route-locale="@ViewContext.RouteData.Values["locale"]"
                asp-route-tenant="@ViewContext.RouteData.Values["tenant"]"
              method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@Localizer["DownloadButton"]</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData"
                asp-area="Identity" 
                asp-route-locale="@ViewContext.RouteData.Values["locale"]"
                asp-route-tenant="@ViewContext.RouteData.Values["tenant"]"
               class="btn btn-primary">@Localizer["DeleteButton"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}